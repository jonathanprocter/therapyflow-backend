# TherapyFlow Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/therapyflow

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# ============================================
# SERVER
# ============================================
PORT=5000
NODE_ENV=development
APP_VERSION=1.0.0

# For Replit deployments
REPLIT_DOMAINS=

# For Render deployments
RENDER_EXTERNAL_URL=

# ============================================
# AUTHENTICATION
# ============================================
# Default therapist ID for mock auth (replace with real auth system)
DEFAULT_THERAPIST_ID=dr-jonathan-procter

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-here

# ============================================
# AI SERVICES
# ============================================
# OpenAI API Key for GPT models
OPENAI_API_KEY=sk-...

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs API Key for voice synthesis
ELEVENLABS_API_KEY=

# ============================================
# GOOGLE SERVICES
# ============================================
# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Google Calendar API
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_REFRESH_TOKEN_NEW=your-new-refresh-token

# Google Drive Integration
GOOGLE_DRIVE_WATCH_FOLDER_ID=your-folder-id
GOOGLE_DRIVE_PROCESSED_FOLDER_ID=your-processed-folder-id
GOOGLE_DRIVE_POLL_INTERVAL=300000

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable file watcher service
ENABLE_FILE_WATCHER=true

# Enable/disable Google Drive polling
ENABLE_DRIVE_POLLING=false

# Enable/disable calendar reconciliation
ENABLE_CALENDAR_RECONCILIATION=true

# ============================================
# FILE WATCHER
# ============================================
# Path to watch for new documents
WATCH_FOLDER_PATH=/path/to/watch/folder

# Polling interval in milliseconds
WATCH_POLL_INTERVAL=5000

# ============================================
# CACHING (Optional - for production)
# ============================================
# Redis connection URL (optional, uses in-memory cache if not set)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=300

# ============================================
# RATE LIMITING
# ============================================
# Standard rate limit (requests per 15 minutes)
RATE_LIMIT_STANDARD=100

# AI processing rate limit (requests per 15 minutes)
RATE_LIMIT_AI=20

# ============================================
# LOGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json, pretty
LOG_FORMAT=pretty

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=

# DataDog API key for monitoring
DATADOG_API_KEY=

# ============================================
# EMAIL (Optional)
# ============================================
# SendGrid API key for email notifications
SENDGRID_API_KEY=

# From email address
EMAIL_FROM=noreply@therapyflow.com

# ============================================
# SECURITY
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Enable HTTPS redirect in production
FORCE_HTTPS=false

# ============================================
# BACKUP & RETENTION
# ============================================
# Automatic backup enabled
ENABLE_AUTO_BACKUP=false

# Data retention period in days
DATA_RETENTION_DAYS=365

# ============================================
# DEVELOPMENT
# ============================================
# Enable debug mode
DEBUG=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# Mock external services (for testing)
MOCK_EXTERNAL_SERVICES=false
